/// ========================================
/// NOTE MODELS
/// ========================================

/// 외부 정보 및 아이디어 기록
/// 트레이딩 활동 중 접한 외부 정보나 콘텐츠(책, 웹사이트, 개인 아이디어 등)를 기록
/// 얻은 인사이트, 관련 행동 전략, 사후 실행 아이디어 등을 구조화
model Note {
  id Int @id @default(autoincrement()) // 고유식별자
  journal_item_id Int // JournalItem 참조 (이 노트가 기록된 복기 JournalItem)
  type NoteType // 노트 출처 유형 (예: Book, Web, Idea)
  source String @default("") // 노트가 발생한 출처명 (예: 블로그 주소, 책 제목 등)
  reason String @default("") // 이 노트를 작성한 이유
  thought String @default("") // 이 노트에 대한 내 생각
  action_plan String @default("") // 이 노트를 기반으로 한 행동 전략 또는 실천 계획

  // Relations
  journal_item JournalItem @relation(fields: [journal_item_id], references: [id])

  @@index([journal_item_id])
  @@index([type])
}