/// ========================================
/// RESOURCE MODELS
/// ========================================

/// 참고 자료 저장소
/// 이미지, 링크 등 외부 자료를 저장하여 복기 시 참고 자료로 활용
model Resource {
  id Int @id @default(autoincrement()) // 고유식별자
  type ResourceType // 자료 유형 (예: Image, WebSite)
  title String @default("") // 자료 제목 또는 식별명
  memo String @default("") // 자료 내용 요약 또는 메모
  uri String @default("") // 자료의 URI 또는 링크 주소
  created_at DateTime @default(now()) // 자료가 등록된 시각

  // Relations
  journal_item_resources JournalItemResource[]

  @@index([type])
  @@index([created_at])
}