/// ========================================
/// REFERENCE DATA MODELS
/// ========================================

/// Symbol - 거래 심볼
/// 암호화폐 거래 심볼의 기본 정보를 관리하는 모델
model Symbol {
  id Int @id @default(autoincrement())
  name String @unique /// 심볼명
  full_name String @unique /// 전체 이름
  created_at DateTime @default(now()) /// 생성 시각
  updated_at DateTime @updatedAt /// 수정 시각
  deactivated_at DateTime? /// 비활성화 시각

  // Relations
  positions Position[]
  strategy_observations StrategyObservation[]
  scenarios Scenario[]
  orders Order[]
  trades Trade[]

  @@index([created_at])
  @@index([deactivated_at])
}

/// StrategyMethod - 전략 방법
/// 트레이딩 전략의 방법론을 정의하는 모델
model StrategyMethod {
  id Int @id @default(autoincrement())
  name String @unique /// 방법명
  description String @default("") /// 설명
  created_at DateTime @default(now()) /// 생성 시각
  updated_at DateTime @updatedAt /// 수정 시각
  deactivated_at DateTime? /// 비활성화 시각

  // Relations
  strategy_definitions StrategyDefinition[]

  @@index([created_at])
  @@index([deactivated_at])
}