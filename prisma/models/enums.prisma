/// ========================================
/// ENUM DEFINITIONS
/// ========================================



/// CurrencyType - 거래 통화
/// 거래에 사용되는 통화 유형을 정의하는 enum
enum CurrencyType {
  USDT /// Tether USD
  USDC /// USD Coin
  KRW /// 한국 원화
}

/// PositionDirectionType - 포지션 방향
/// 포지션의 매수/매도 방향을 정의하는 enum
enum PositionDirectionType {
  Long /// 매수 포지션
  Short /// 매도 포지션
}

/// MarketTrendType - 시장 추세
/// 시장의 전반적인 추세를 정의하는 enum
enum MarketTrendType {
  VeryBullish /// 매우 강한 상승
  Bullish /// 상승
  Crabish /// 횡보
  Bearish /// 하락
  VeryBearish /// 매우 강한 하락
}

/// ScoreType - 평가 점수 (5단계)
/// 다양한 평가에 사용되는 5단계 점수 체계를 정의하는 enum
enum ScoreType {
  VeryHigh  /// 매우 높음
  High      /// 높음
  Medium    /// 보통
  Low       /// 낮음
  VeryLow   /// 매우 낮음
}

/// TimeIntervalType - 시간 간격
/// 차트 분석에 사용되는 시간 간격을 정의하는 enum
enum TimeIntervalType {
  OneMinute /// 1분
  TwoMinutes /// 2분
  ThreeMinutes /// 3분
  FiveMinutes /// 5분
  TenMinutes /// 10분
  FifteenMinutes /// 15분
  ThirtyMinutes /// 30분
  FortyFiveMinutes /// 45분
  OneHour /// 1시간
  TwoHours /// 2시간
  ThreeHours /// 3시간
  FourHours /// 4시간
  TwelveHours /// 12시간
  OneDay /// 1일
  OneWeek /// 1주
  OneMonth /// 1개월
  ThreeMonths /// 3개월
  SixMonths /// 6개월
  TwelveMonths /// 12개월
}

/// TradeTimeFrameType - 트레이딩 시간 프레임
/// 트레이딩 전략의 시간 프레임을 정의하는 enum
enum TradeTimeFrameType {
  Scalp /// 초단타
  Day /// 데이 트레이딩
  Swing /// 스윙 트레이딩
  Position /// 포지션 트레이딩
  Investment /// 장기 투자
}

/// StrategyBiasType - 전략 방향성
/// 전략의 추세 추종/역추세 방향성을 정의하는 enum
enum StrategyBiasType {
  FollowTrend /// 추세 추종
  CounterTrend /// 역추세
}

/// OrderType - 주문 유형
/// 주문의 진입/청산 유형을 정의하는 enum
enum OrderType {
  Open /// 진입
  Close /// 청산
}

/// ResourceType - 참고 자료 유형
/// 참고 자료의 미디어 유형을 정의하는 enum
enum ResourceType {
  Image /// 이미지
  Video /// 동영상
  Audio /// 음성
  Document /// 문서
}

/// ScenarioType - 시나리오 유형
/// 시나리오의 진입/청산 유형을 정의하는 enum
enum ScenarioType {
  Entry /// 진입
  Exit /// 청산
}

/// TransactionType - 거래 유형
/// 거래 내역의 유형을 정의하는 enum
enum TransactionType {
  Deposit /// 입금
  Withdrawal /// 출금
  Order /// 주문
}

/// NoteType - 노트 출처 유형
/// 노트의 출처 유형을 정의하는 enum
enum NoteType {
  Book /// 책, 논문
  Web /// 웹, 뉴스
  Idea /// 개인 아이디어
}

/// PreferenceType - 사용자 설정 유형
/// 사용자 설정의 유형을 정의하는 enum
enum PreferenceType {
  Strategy /// 전략
  RiskManagement /// 리스크 관리
  Principle /// 원칙
} 